<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/saidit_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.gemapps.saidit.ui.widget.CircularImageView
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="?attr/actionBarSize"
            android:elevation="4dp"
            android:foreground="@drawable/ic_saidit"
            app:srcCompat="@drawable/ic_saidit"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_saidit_text"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/top_listing_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:visibility="gone"
        tools:listitem="@layout/listing_item_list"/>

    <include
        layout="@layout/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <ViewStub
        android:id="@+id/oauth_error_stub"
        style="@style/AppTheme.ErrorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/authentication_error"/>

    <ViewStub
        android:id="@+id/empty_list_stub"
        style="@style/AppTheme.ErrorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/empty_list_view"/>

</merge>